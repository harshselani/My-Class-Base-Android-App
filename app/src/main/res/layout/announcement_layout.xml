<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
      >

    <TextView
        android:id="@+id/announcement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : 12/3/15"

        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp" android:paddingTop="3dp" android:paddingBottom="10dp"
        android:background="#c0c0c0"/>

    <TextView
        android:id="@+id/announcement_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test aasf asgags aghah"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" android:paddingTop="10dp" />


</LinearLayout>